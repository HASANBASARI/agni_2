<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
<xacro:include filename="inertial_macros.xacro"/>


  <material name="white">
      <color rgba="1 1 1 1"/>
  </material>

  <material name="orange">
      <color rgba="1 0.3 0.1 1"/>
  </material>

  <material name="blue">
      <color rgba="0.2 0.2 1 1"/>
  </material>

  <material name="black">
      <color rgba="0 0 0 1"/>
  </material>

  <material name="red">
      <color rgba="1 0 0 1"/>
  </material>

<!--/////////////////////////// base link //////////////////////// -->
  <link name="base_link">
    
  </link>
<!--/////////////////////////// body link //////////////////////// -->

  <joint name="body_joint" type="fixed">
    <parent link="base_link"/>
    <child link="body_link"/>
    <origin xyz="-0.15 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="body_link">
    <visual>
    <origin xyz="0.15 0.0 0.15" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
    <origin xyz="0.15 0.0 0.15" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
    </collision>

    <xacro:inertial_box mass="1.5" x="0.3" y="0.3" z="0.3">
       <origin xyz="0.15 0.0 0.15" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_box>

  </link>
 <gazebo reference="body_link">
    <material>Gazebo/White</material>
</gazebo>

<!--/////////////////////////// left wheel link //////////////////////// -->
 <joint name="left_wheel_joint" type="continuous">
 <parent link="body_link"/>
 <child link="left_wheel"/>
 <origin xyz="0.15 0.15 0.0" rpy="-1.57 0.0 0.0"/>
 <axis xyz="0.0 0.0 -1"/>
  
 </joint>

 <link name="left_wheel">
  <visual>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
    <material name="blue"/>
  </visual>
  
  <collision>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
  </collision>

  <xacro:inertial_cylinder mass="0.1" length="0.033" radius="0.0415">
        <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:inertial_cylinder>

 </link>
 <gazebo reference="left_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

 <!--/////////////////////////// right wheel link //////////////////////// -->
 <joint name="right_wheel_joint" type="continuous">
 <parent link="body_link"/>
 <child link="right_wheel"/>
 <origin xyz="0.15 -0.15 0.0" rpy="1.57 0.0 0.0"/>
 <axis xyz="0.0 0.0 1"/>
  
 </joint>

 <link name="right_wheel">
  <visual>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
    <material name="blue"/>
  </visual>

   <collision>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
  </collision>

  <xacro:inertial_cylinder mass="0.1" length="0.033" radius="0.0415">
        <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:inertial_cylinder>

 </link>

 <gazebo reference="right_wheel">
    <material>Gazebo/Blue</material>
</gazebo> 

  <!--/////////////////////////// f_caster wheel link //////////////////////// -->
 <joint name="f_caster_wheel_joint" type="fixed">
 <parent link="body_link"/>
 <child link="f_caster_wheel"/>
 <origin xyz="0.24 0.0 0.0" rpy="0.0 0.0 0.0"/>
 </joint>

 <link name="f_caster_wheel">
  <visual>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
    <material name="black"/>
  </visual>

  <collision>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
  </collision>

  <xacro:inertial_sphere mass="0.1" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>

 </link>
 
  <gazebo reference="f_caster_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
</gazebo>

   <!--/////////////////////////// r_caster wheel link //////////////////////// -->
 <joint name="r_caster_wheel_joint" type="fixed">
 <parent link="body_link"/>
 <child link="r_caster_wheel"/>
 <origin xyz="0.06 0.0 0.0" rpy="0.0 0.0 0.0"/>
 </joint>

 <link name="r_caster_wheel">
  <visual>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
    <material name="black"/>
  </visual>

  <collision>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
  </collision>


<xacro:inertial_sphere mass="0.1" radius="0.04">
        <origin xyz="0 0 0" rpy="0 0 0"/>
</xacro:inertial_sphere>

 </link>

   <gazebo reference="r_caster_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
</gazebo>

<!--/////////////////////////// lidar link //////////////////////// -->

<joint name="lidar_joint" type="fixed">
        <parent link="body_link"/>
        <child link="lidar_link"/>
        <origin xyz="0.1 0 0.32" rpy="0 0 0"/>
    </joint>

    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
  
    </link>
    <gazebo reference="lidar_link">
    <material>Gazebo/Red</material>
</gazebo> 

</robot>